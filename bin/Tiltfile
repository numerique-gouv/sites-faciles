load('ext://uibutton', 'cmd_button', 'bool_input', 'location')
load('ext://namespace', 'namespace_create', 'namespace_inject')
namespace_create('sites-faciles')

docker_build(
    'localhost:5001/sites-faciles:latest',
    context='..',
    dockerfile='../Dockerfile',
    target = 'production',
    live_update=[
        sync('../', '/app'),
        run(
            'uv sync',
        )
    ]
)


k8s_resource('sites-faciles-migrate', resource_deps=['postgres-postgresql'])
k8s_resource('sites-faciles-createsuperuser', resource_deps=['sites-faciles-migrate'])
k8s_resource('sites-faciles', resource_deps=['sites-faciles-migrate'])
k8s_yaml(local('cd ../helm && helmfile -n sites-faciles -e dev template .'))

migration = '''
set -eu
# get k8s pod name from tilt resource name
POD_NAME="$(tilt get kubernetesdiscovery sites-faciles -ojsonpath='{.status.pods[0].name}')"
kubectl -n impress exec "$POD_NAME" -- python manage.py makemigrations
'''
cmd_button('Make migration',
           argv=['sh', '-c', migration],
           resource='sites-faciles',
           icon_name='developer_board',
           text='Run makemigration',
)

pod_migrate = '''
set -eu
# get k8s pod name from tilt resource name
POD_NAME="$(tilt get kubernetesdiscovery impress-backend -ojsonpath='{.status.pods[0].name}')"
kubectl -n impress exec "$POD_NAME" -- python manage.py migrate --no-input
'''
cmd_button('Migrate db',
           argv=['sh', '-c', pod_migrate],
           resource='impress-backend',
           icon_name='developer_board',
           text='Run database migration',
)
